<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="HelpStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource OxfordGrayBrush}"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="FontSize" Value="25"/>
    </Style>

    <Style x:Key="AttentionTextStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource ScarletBrush}"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="FontSize" Value="60"/>
    </Style>

    <Style x:Key="PingLabel" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource AluminumBrush}"/>
        <Setter Property="Margin" Value="0,20,0,10"/>
        <Setter Property="FontSize" Value="20"/>
    </Style>
</ResourceDictionary>
